<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.mapper.MemberMapper">
	<select id="getList" resultType="com.it.domain.MemberVO">
		select * from tbl_member order by m_id
	</select>
	<insert id="insert">
		insert into tbl_member (m_id, m_passwd, m_name)
		values (#{m_id},#{m_passwd}, #{m_name})
	</insert>
	<select id="read" resultType="com.it.domain.MemberVO">
	select * from tbl_member where m_id = #{m_id}
	</select>
	
	<!-- 
	<select id="auth" resultType="com.it.domain.MemberVO">
	select * from tbl_member where m_id = #{m_id} and m_passwd = #{m_passwd}
	</select>
	 -->
	
	
	<update id="update">
	update tbl_member set m_name = #{m_name}, m_passwd = #{m_passwd}
	where m_id = #{m_id}
	</update>
	<delete id="delete">
	delete  from tbl_member where m_id = #{m_id}
	</delete>
</mapper>